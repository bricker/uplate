<% if !logged_in? %>
  <%= form_tag sessions_path do %>
    <fieldset>
    <legend>Admin Login</legend>
      <ol>
        <li>
          <%= label_tag :username %> <%= text_field_tag :username %>
        </li>
        <li>
          <%= label_tag :password %> <%= password_field_tag :password %>
        </li>
      </ol>
    </fieldset>
    <fieldset>
      <%= submit_tag "login" %>
    </fieldset>
  <% end %>
<% else %>
  <%= link_to "Logout", logout_path %>
<% end %>
